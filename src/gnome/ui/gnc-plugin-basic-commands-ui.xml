<interface>
  <menu id="menubar">
    <section id="menubar-main-section">
      <submenu id="menubar-file">
        <section id="menubar-file-new-section">
          <item>
            <attribute name="label" translatable="yes">Print</attribute>
            <attribute name="action">app.file.new</attribute>
          </item>
        </section>
        <section id="menubar-file-open-section">
          <item>
            <attribute name="label" translatable="yes">Open</attribute>
            <attribute name="action">app.file.open</attribute>
          </item>
        </section>
        <section id="menubar-file-save-section">
          <item>
            <attribute name="label" translatable="yes">Save</attribute>
            <attribute name="action">app.file.save</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Save As</attribute>
            <attribute name="action">app.file.save-as</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Revert</attribute>
            <attribute name="action">app.file.revert</attribute>
          </item>
        </section>
        <section id="menubar-file-print-section">
          <submenu id="menubar-file-export-submenu">
            <section id="menubar-file-export-section">
              <item>
                <attribute name="label" translatable="yes">Export Accounts</attribute>
                <attribute name="action">app.file.export</attribute>
              </item>
            </section>
          </submenu>
        </section>
      </submenu>
      <submenu id="menubar-edit">
        <section id="menubar-edit-find-section">
          <item>
            <attribute name="label" translatable="yes">Find</attribute>
            <attribute name="action">edit.find</attribute>
          </item>
        </section>
        <section id="menubar-edit-preferences-section">
          <item>
            <attribute name="label" translatable="yes">Tax Report Options</attribute>
            <attribute name="action">app.tax-options</attribute>
          </item>
        </section>
      </submenu>
      <submenu id="menubar-actions">
        <section id="menubar-actions-section">
          <submenu id="menubar-actions-scheduled-submenu">
            <attribute name="label" translatable="yes">Scheduled Transactions</attribute>
              <section id="menubar-actions-scheduled-section">
                <item>
                  <attribute name="label" translatable="yes">Scheduled Transaction Editor</attribute>
                  <attribute name="action">scheduled.editor</attribute>
                </item>
                <item>
                  <attribute name="label" translatable="yes">Since Last Run</attribute>
                  <attribute name="action">scheduled.since-last-run</attribute>
                </item>
                <item>
                  <attribute name="label" translatable="yes">Mortgage &amp; Loan Repayment...</attribute>
                  <attribute name="action">scheduled.load-calculator</attribute>
                </item>
              </section>
          </submenu>
        </section>
      </submenu>
      <submenu id="menubar-tools">
        <section id="menubar-tools-section">
          <item>
            <attribute name="label" translatable="yes">Price Editor</attribute>
            <attribute name="action">tool.editor.price</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Commodity Editor</attribute>
            <attribute name="action">tool.editor.commodity</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Financial Calculator</attribute>
            <attribute name="action">tool.calculator</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Close Books</attribute>
            <attribute name="action">tool.close-books</attribute>
          </item>
          <item>
            <attribute name="label" translatable="yes">Imap Editor</attribute>
            <attribute name="action">tool.editor.imap</attribute>
          </item>
        </section>
      </submenu>
      <submenu id="menubar-help">
        <section id="menubar-help-section">
          <section id="menubar-help-topics-section">
            <item>
              <attribute name="label" translatable="yes">Tips of the Day</attribute>
              <attribute name="action">app.help.tips-of-the-day</attribute>
            </item>
          </section>
        </section>
      </submenu>
    </section>
  </menu>
  <menu id="toolbar">
    <section id="toolbar-section">
      <section id="toolbar-file-section">
        <section id="toolbar-save-section">
          <item>
            <attribute name="label" translatable="yes">Save</attribute>
            <attribute name="action">app.file.save</attribute>
          </item>
        </section>
      </section>
    </section>
  </menu>
</interface>
